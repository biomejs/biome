{
	"$schema": "./packages/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	},
	"files": {
		"ignore": [
			"dist/**",
			".astro/**",
			"assets/**",
			"public/**",
			"**/__snapshots__",
			"**/editors/intellij/**",
			"**/undefined/**"
		]
	},
	"formatter": {
		"ignore": ["configuration-schema.json"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
