---
import type { CollectionEntry } from "astro:content";
import BlogPostInfo from "@src/components/BlogPostInfo.astro";
import { Image } from "astro:assets";

export interface Props {
	post: CollectionEntry<"blog">["data"];
}

const { post } = Astro.props;
---

<Fragment>
  {
    post.coverImage && (
      <figure class="blog-cover">
				<picture>
					<Image alt={post.coverImage.alt} src={post.coverImage.lightSrc} class="dark:sl-hidden" />
					<Image alt={post.coverImage.alt} src={post.coverImage.darkSrc} class="light:sl-hidden" />
				</picture>

        {post.coverImage.caption && (
          <figcaption class="blog-cover-caption">
            {post.coverImage.caption}
          </figcaption>
        )}
      </figure>
    )
  }

  {post.subtitle && <div class="subtitle">{post.subtitle}</div>}

  <BlogPostInfo post={post} />

  <slot />
</Fragment>
