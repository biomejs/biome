---
import "@src/styles/playground/index.scss";

import StarlightSplashLayout from "@src/layouts/StarlightSplashLayout.astro";
import PlaygroundLoader from "@src/playground/PlaygroundLoader";
---

<StarlightSplashLayout title="Playground" description="Biome's interactive playground" slug="">
	<div id="root" class="not-content">
		<PlaygroundLoader client:only/>
	</div>
</StarlightSplashLayout>

<style>
  :global(div.content-panel) {
    padding: 0;
  }
  :global(.content-panel:nth-of-type(1)) {
    display: none;
  }
  :global(div.sl-container) {
    margin: 0;
    max-width: none;
  }
  :global(div.sl-container footer) {
    display: none;
  }
  :global(.main-pane main) {
    padding-bottom: 0;
    height: 100%;
  }
</style>
