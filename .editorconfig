root = true

[*]
end_of_line = lf
trim_trailing_whitespace = true
insert_final_newline = true
charset = utf-8
indent_style = tab
indent_size = 2

# YAML doesn't support hard tabs ğŸ™ƒ
# Templates that will be weird with hard tabs in the website editor
[**.yml]
indent_style = space

[**.md]
indent_style = space

[**.mdx]
indent_style = space

[justfile]
indent_style = space

[**.json]
indent_style = space

[*.rs]
indent_style = space
indent_size = 4
