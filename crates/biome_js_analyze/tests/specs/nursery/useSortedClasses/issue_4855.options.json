{
  "$schema": "../../../../../../packages/@biomejs/biome/configuration_schema.json",
  "javascript": {
    "formatter": {
      "quoteStyle": "single",
      "jsxQuoteStyle": "double"
    }
  },
  "linter": {
    "rules": {
      "nursery": {
        "useSortedClasses": {
          "level": "error",
          "options": {
            "attributes": ["customClassAttribute"],
            "functions": ["clsx", "tw", "tw.*"]
          }
        }
      }
    }
  }
}
