{
	"$schema": "../../../../../../packages/@biomejs/biome/configuration_schema.json",
	"linter": {
		"rules": {
			"nursery": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"node:fs": "Importing from node:fs is forbidden"
						},
						"patterns": [{
							"group": ["lodash/*", "!lodash/get"],
							"message": "It's not recommended to use lodash"
						}]
					}
				}
			}
		}
	}
}
