{
	"$schema": "../../../../../../packages/@biomejs/biome/configuration_schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"nursery": {
				"noBitwiseOperators": "error",
				"noRestrictedElements": {
					"level": "error",
					"options": {
						"elements": {
							"input": {
								"message": "Use TextField instead"
							},
							"button": "Use Button instead",
							"MyNS.MyComponent": "This component is deprecated"
						}
					}
				}
			}
		}
	}
}
