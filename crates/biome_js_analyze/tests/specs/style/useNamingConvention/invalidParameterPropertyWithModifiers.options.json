{
    "$schema": "../../../../../../packages/@biomejs/biome/configuration_schema.json",
    "linter": {
        "rules": {
            "style": {
                "useNamingConvention": {
                    "level": "error",
                    "options": {
                        "strictCase": false,
                        "requireAscii": true,
                        "conventions": [
                            {
                                "selector": {
                                    "kind": "classProperty",
                                    "modifiers": ["private", "readonly"]
                                },
                                "formats": ["CONSTANT_CASE", "camelCase"],
                                "match": "_(.+)"
                            },
                            {
                                "selector": {
                                    "kind": "classProperty",
                                    "modifiers": ["private"]
                                },
                                "formats": ["camelCase"],
                                "match": "_(.+)"
                            },
                            {
                                "selector": {
                                    "kind": "classMember",
                                    "modifiers": ["private"]
                                },
                                "match": "_(.+)"
                            }
                        ]
                    }
                }
            }
        }
    }
}