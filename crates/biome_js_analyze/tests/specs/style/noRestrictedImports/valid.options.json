{
	"$schema": "../../../../../../packages/@biomejs/biome/configuration_schema.json",
	"linter": {
		"rules": {
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"node:fs": "Importing from node:fs is forbidden",
							"bare-forbidden": {
								"importNames": [
									""
								]
							},
							"default-forbidden": {
								"importNames": [
									"default"
								]
							},
							"namespace-forbidden": {
								"importNames": [
									"*"
								]
							},
							"member-forbidden": {
								"importNames": [
									"forbidden1",
									"forbidden2",
									"forbidden3",
									"forbidden4",
									"forbidden5",
									"forbidden6",
									"forbidden7",
									"forbidden8",
									"forbidden9"
								]
							},
							"bare-allowed": {
								"allowImportNames": [
									""
								]
							},
							"default-and-member-allowed": {
								"allowImportNames": [
									"default",
									"allowed1",
									"allowed2",
									"allowed3",
									"allowed4",
									"allowed5",
									"allowed6",
									"allowed7",
									"allowed8",
									"allowed9"
								]
							},
							"namespace-allowed": {
								"allowImportNames": [
									"*"
								]
							},
							"member-allowed": {
								"allowImportNames": [
									"allowed1",
									"allowed2",
									"allowed3",
									"allowed4",
									"allowed5",
									"allowed6",
									"allowed7",
									"allowed8",
									"allowed9"
								]
							}
						},
            "patterns": [
              {
                "group": ["foo/*", "!foo/bar"],
                "message": "foo is forbidden, use bar instead"
              },
              {
                "group": ["FOO"],
                "message": "Case sensitive is the default"
              },
              {
                "group": ["**/my/relative-module"],
                "importNamePattern": "Foo"
              },
              {
                "group": ["**/my/relative-module"],
                "importNamePattern": "Baz",
                "message": "Default import should not be reported unless importNamePattern includes 'default'"
              },
              {
                "group": ["baz"],
                "importNamePattern": "Baz"
              },
              {
                "group": ["**/my/relative-module"],
                "importNamePattern": "Foo"
              },
              {
                "group": ["**/my/relative-module"],
                "importNamePattern": "z"
              },
              {
                "group": ["bar"],
                "importNamePattern": "x",
                "invertImportNamePattern": true
              }
            ]
					}
				}
			}
		}
	}
}
