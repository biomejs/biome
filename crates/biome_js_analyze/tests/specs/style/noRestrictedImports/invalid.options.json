{
	"$schema": "../../../../../../packages/@biomejs/biome/configuration_schema.json",
	"linter": {
		"enabled": true,
		"rules": {
			"style": {
				"noRestrictedImports": {
					"level": "error",
					"options": {
						"paths": {
							"eslint": "Importing Eslint is forbidden",
							"lodash": "It's not recommended to use lodash",
							"bare-forbidden": {
								"importNames": [
									""
								]
							},
							"default-forbidden": {
								"importNames": [
									"default"
								]
							},
							"namespace-forbidden": {
								"importNames": [
									"*"
								]
							},
							"member-forbidden": {
								"importNames": [
									"forbidden1",
									"forbidden2",
									"forbidden3",
									"forbidden4",
									"forbidden5",
									"forbidden6",
									"forbidden7",
									"forbidden8",
									"forbidden9"
								]
							},
							"bare-allowed": {
								"allowImportNames": [
									""
								]
							},
							"default-allowed": {
								"allowImportNames": [
									"default"
								]
							},
							"namespace-allowed": {
								"allowImportNames": [
									"*"
								]
							},
							"member-allowed": {
								"allowImportNames": [
									"allowed1",
									"allowed2",
									"allowed3",
									"allowed4",
									"allowed5",
									"allowed6",
									"allowed7",
									"allowed8",
									"allowed9"
								]
							}
						},
            "patterns": [
              {
                "group": ["foo/*", "!foo/bar"],
                "message": "foo is forbidden, use foo/bar instead"
              },
              {
                "group": ["bar/n1", "bar/n2"],
                "message": "some bar subimports are restricted"
              },
              {
                "group": ["FOO"],
                "message": "Case sensitive is the default"
              },
              {
                "group": ["**/my/relative-module"],
                "importNamePattern": ".*"
              },
              {
                "group": ["**/my/relative-module1"],
                "importNamePattern": ".*"
              },
              {
                "group": ["**/my/relative-module2"],
                "importNamePattern": "Foo"
              },
              {
                "group": ["**/my/relative-module3"],
                "importNamePattern": "Foo.*"
              },
              {
                "group": ["**/my/relative-module4"],
                "importNamePattern": "Foo|Bar"
              },
              {
                "group": ["**/my/relative-module5"],
                "importNamePattern": "(Foo|Bar)"
              },
              {
                "group": ["mod1"],
                "importNamePattern": "default"
              },
              {
                "group": ["mod2"],
                "importNamePattern": "default"
              },
              {
                "group": ["mod3"],
                "importNamePattern": "Bar",
                "invertImportNamePattern": false
              }
            ]
					}
				}
			}
		}
	}
}
