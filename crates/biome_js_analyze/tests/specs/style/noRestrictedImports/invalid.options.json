{
  "$schema": "../../../../../../packages/@biomejs/biome/configuration_schema.json",
  "linter": {
    "enabled": true,
    "rules": {
      "style": {
        "noRestrictedImports": {
          "level": "error",
          "options": {
            "paths": {
              "eslint": "Importing Eslint is forbidden",
              "lodash": "It's not recommended to use lodash",
              "bare-forbidden": {
                "importNames": [
                  ""
                ]
              },
              "default-forbidden": {
                "importNames": [
                  "default"
                ]
              },
              "namespace-forbidden": {
                "importNames": [
                  "*"
                ]
              },
              "member-forbidden": {
                "importNames": [
                  "forbidden1",
                  "forbidden2",
                  "forbidden3",
                  "forbidden4",
                  "forbidden5",
                  "forbidden6",
                  "forbidden7",
                  "forbidden8",
                  "forbidden9"
                ]
              },
              "bare-allowed": {
                "allowImportNames": [
                  ""
                ]
              },
              "default-allowed": {
                "allowImportNames": [
                  "default"
                ]
              },
              "namespace-allowed": {
                "allowImportNames": [
                  "*"
                ]
              },
              "member-allowed": {
                "allowImportNames": [
                  "allowed1",
                  "allowed2",
                  "allowed3",
                  "allowed4",
                  "allowed5",
                  "allowed6",
                  "allowed7",
                  "allowed8",
                  "allowed9"
                ]
              }
            },
            "patterns": [
              {
                "group": ["**/sideeffect-forbidden", "!**/sideeffect-allowed"],
                "importNamePattern": "",
                "message": "sideeffect-forbidden is forbidden, use sideeffect-allowed instead"
              },
              {
                "group": ["d-sideeffect-forbidden"]
              },
              {
                "group": ["namespace-import-forbidden"]
              },
              {
                "group": ["named-import-forbidden"],
                "importNamePattern": "export1"
              },
              {
                "group": ["default-import-forbidden"],
                "importNamePattern": "default"
              },
              {
                "group": ["default-import-forbidden"],
                "importNamePattern": "default",
                "message": "Default import should not be reported unless importNamePattern includes 'default'"
              },
              {
                "group": ["default-import-forbidden"],
                "importNamePattern": "default",
                "invertImportNamePattern": false
              }
            ]
          }
        }
      }
    }
  }
}
