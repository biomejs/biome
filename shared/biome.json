{
	"$schema": "../packages/@biomejs/biome/configuration_schema.json",
	"vcs": {
		"clientKind": "git",
		"enabled": true,
		"useIgnoreFile": true
	},
	"linter": {
		"enabled": true,
		"rules": {
			"recommended": true,
			"style": {
				"noNonNullAssertion": "off"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	},
	"files": {
		"ignore": ["packages/@biomejs/wasm-*"],
		"include": ["packages/@biomejs/**", "packages/tailwindcss-config-analyzer"]
	}
}
